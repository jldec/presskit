{
	"name": "presskit-worker",
	"scripts": {
		"dev": "pnpm run '/^watch:*/'",
		"watch:wrangler": "wrangler dev src/index.tsx --remote",
		"build:css": "tailwindcss -i src/style.css -o public/css/style.css",
		"watch:tailwind": "tailwindcss -i src/style.css -o public/css/style.css --watch",
		"ship": "pnpm run build:css && wrangler deploy --minify src/index.tsx",
		"test": "vitest run"
	},
	"dependencies": {
		"@std/path": "npm:@jsr/std__path@1.0.1",
		"@std/front-matter": "npm:@jsr/std__front-matter@1.0.0-rc.2",
		"hono": "^4.5.0",
		"markdown-it": "^14.1.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240712.0",
		"@tailwindcss/typography": "^0.5.13",
		"@types/markdown-it": "^14.1.1",
		"daisyui": "^4.12.10",
		"tailwindcss": "^3.4.6",
		"vitest": "^2.0.3",
		"wrangler": "^3.65.0"
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"semi": false,
		"printWidth": 120,
		"trailingComma": "none"
	}
}
